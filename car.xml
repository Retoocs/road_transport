		<title>Značka</title>
		<action trigger="set">
			plateNumber: f.plate_number,
			name: f.car_name,
			brand: f.this,
			model: f.model;
			
			def resultStr;
			
			if(name.value == null){
				resultStr = plateNumber.value + " - " + brand.value + " " + model.value
			}
			else{
				resultStr = plateNumber.value + " - " + name.value + " - " + brand.value + " " + model.value
			}
			
			changeCaseProperty "title" about {
				resultStr
			}
		</action>
	</data>
