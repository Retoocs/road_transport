	<data type="text">
		<id>plate_number</id>
		<title>EČV</title>
		<action trigger="set">
			history: f.history_plate_number,
			plateNumber: f.this,
			name: f.car_name,
			brand: f.brand,
			model: f.model;
			
			if((plateNumber.value != null).and(plateNumber.value.isEmpty() == false) ){
				def currentDateTime = java.time.LocalDateTime.now()
				def formatter = java.time.format.DateTimeFormatter.ofPattern("dd.MM.YYYY HH:mm")
				def formatedDateTime = currentDateTime.format(formatter)
							
				change history choices {
					history.choices + [formatedDateTime + " -- " + plateNumber.value]
				}
			}
		
			def resultStr;
			
			if(name.value == null){
				resultStr = plateNumber.value + " - " + brand.value + " " + model.value
			}
			else{
				resultStr = plateNumber.value + " - " + name.value + " - " + brand.value + " " + model.value
			}
			
			changeCaseProperty "title" about {
				resultStr
			}
